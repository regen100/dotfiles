pkgname=wcwidth-cjk-git
_gitname=wcwidth-cjk
pkgver=e4a40fc
pkgrel=1
pkgdesc="Run command with CJK-friendly wcwidth(3) to fix ambiguous width chars"
url="https://github.com/fumiyas/wcwidth-cjk"
arch=('i686' 'x86_64')
license=('BSD')
provides=('wcwidth-cjk')
conflicts=('wcwidth-cjk')
source=('git://github.com/fumiyas/wcwidth-cjk')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}

build() {
  cd $_gitname
  autoreconf --install
  ./configure --prefix=/usr
  make
}

package() {
  cd $_gitname
  make DESTDIR="$pkgdir" install
}
